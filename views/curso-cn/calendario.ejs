    <script>
        var socket = io();
        function inscribirse(mesaId, userId) {
            document.getElementById('boton-inscribirse').disabled = true;
            socket.emit('inscripcion', {
                mesaId: mesaId,
                userId: userId
            });
        }
        socket.on('registro-terminado', () => {
            alert('Te registraste con éxito');
            document.location.reload();
        });


    </script>
